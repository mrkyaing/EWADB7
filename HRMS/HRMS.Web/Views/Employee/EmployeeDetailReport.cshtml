<script src="~/lib/jquery/dist/jquery.min.js"></script>
<h3>Employee Detail report </h3>
<form action="/employee/EmployeeDetailReport" method="post">
    <div class="mb-3">
        <label for="code" class="form-label">From Code</label>
        <input type="text" class="form-control" name="FromCode" id="txtFromCode" placeholder="type employee from code in here" required>
    </div>
    <div class="mb-3">
        <label for="Name" class="form-label">To Code</label>
        <input type="text" class="form-control" name="ToCode" id="txtToCode" placeholder="type employee to code in here" required>
    </div>
    <button type="submit" class="btn btn-success" id="btnShow" disabled>Show</button>
    <button type="reset" class="btn btn-primary">Cancel</button>
   </form>
<script>
    $(document).ready(function () {
        //initially disable the entry button
         $('#btnShow').attr('disabled', true);
        //function defination
        function toggleEntryButton() {
            if ($('#txtFromCode').val().length != 0 && $('#txtToCode').val().length != 0) {
                $('#btnShow').attr('disabled', false);
            } else {
                $('#btnShow').attr('disabled', true);
            }
        }
        $('#txtFromCode, #txtToCode').keyup(function () {
            toggleEntryButton();
        });
    });
</script>