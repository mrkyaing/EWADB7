@model IList<ShiftAssignViewModel>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h1>Shift Assign List Information</h1>

@if (TempData["Msg"] != null && !Convert.ToBoolean(TempData["IsErrorOccur"]))
{
    <div class="alert alert-success" role="alert">
        <span>@TempData["Msg"]</span>
    </div>
}
else if (TempData["Msg"] != null)
{
    <div class="alert alert-danger" role="alert">
        <span>@TempData["Msg"]</span>
    </div>
}

<table class="table" id="ShiftAssignTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Employee</th>
            <th scope="col">Shift</th>
            <th scope="col">Department</th>
            <th scope="col">From Date</th>
            <th scope="col">To Date</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.EmployeeCode</td>
                <td>@item.ShiftName</td>
                <td>@item.DepartmentCode</td>
                <td>@item.FromDate</td>
                <td>@item.ToDate</td>
                <td>
                    <a href="/ShiftAssign/edit?Id=@item.Id" class="btn btn-success" role="button">Edit</a>
                    <a href="/ShiftAssign/delete?Id=@item.Id" class="btn bg-danger" role="button" onclick="return confirm('Are you sure to delete this recrod?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#ShiftAssignTable').DataTable();
    });
</script>
